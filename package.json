{
  "name": "bloom-payment-gateway-service",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only --exit-child src/app.ts",
    "start:dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only --exit-child src/app.ts",
    "start:preprod": "NODE_ENV=preprod ts-node-dev --respawn --transpile-only --exit-child src/app.ts",
    "start:prod": "NODE_ENV=production ts-node-dev --respawn --transpile-only --exit-child src/app.ts",
    "build": "tsc -p .",
    "typeorm": "typeorm-ts-node-commonjs",
    "migrate": "rm -rf build && yarn build && yarn typeorm migration:generate ./src/migrations/added-user-entity -d ./src/utils/data-source.ts",
    "db:push": "rm -rf build && yarn build && yarn typeorm migration:run -d src/utils/data-source.ts",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "docker:build": "docker build -t bloom-payment-gateway .",
    "docker:run": "docker run -p 3000:3000 bloom-payment-gateway",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.717.0",
    "@dynatrace/oneagent-sdk": "^1.5.0",
    "amqplib": "^0.10.3",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.1",
    "config": "^3.3.7",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.10",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "html-to-text": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "multer": "^1.4.4",
    "nodemailer": "^6.7.5",
    "pg": "^8.4.0",
    "pug": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.30.4",
    "sib-api-v3-sdk": "^8.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "0.3.6",
    "uuid": "^11.0.3",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^0.0.41",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.13",
    "@types/html-to-text": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.4",
    "@types/pug": "^2.0.6",
    "@types/sharp": "^0.30.2",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^5.7.2"
  },
  "resolutions": {
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.13"
  }
}
