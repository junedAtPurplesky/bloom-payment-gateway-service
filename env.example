# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password
DB_DATABASE=bloom_payment_gateway
DB_HOST=postgres
DB_PORT=5432

# Application Configuration
NODE_ENV=production
PORT=3000

# Gateway API Configuration
GATEWAY_API_KEY=your_gateway_api_key_here

# Fiserv API Configuration
FISERV_API_KEY=your_fiserv_api_key_here
FISERV_API_SECRET=your_fiserv_api_secret_here

# Fiserv URLs
CHECKOUT_URL=https://prod.emea.api.fiservapps.com/exp/v1/checkouts
ORDER_DETAILS_URL=https://prod.emea.api.fiservapps.com/ipp/payments-gateway/v2/orders

# Payment URLs
PAYMENT_WEBHOOK_URL=https://your-domain.com/api/gateway/payment/webhook
PAYMENT_REDIRECT_SUCCESS_URL=https://your-domain.com/payment/success
PAYMENT_REDIRECT_FAILURE_URL=https://your-domain.com/payment/failure

# Email Configuration (optional)
BREVO_API_KEY_EMAIL=your_brevo_api_key
BREVO_SENDER_EMAIL=noreply@yourdomain.com
BREVO_SENDER_NAME=Payment Gateway

# Salesforce Configuration
SALESFORCE_ENABLED=true
SALESFORCE_BASE_URL=https://login.salesforce.com
SALESFORCE_CLIENT_ID=your_salesforce_client_id_here
